अंक प्रवेश () 
{ 
	// यहाँ लिखा कोड पहली 10 पिंगाला संख्याएँ दर्शाएगा
	
	दिखाएँ पंक्ति "कितनी संख्याएँ दर्शाई जाएँ : ";
	संख्यायें: अंक;
	स्वीकार करें संख्यायें;
	प्रथम: अंक = 0;
	दूसरा: अंक = 1;
	दिखाएँ पंक्ति "पिंगाला संख्याएँ";
	दिखाएँ पंक्ति प्रथम;
	दिखाएँ पंक्ति दूसरा;
	
	तीसरा: अंक = 0;
	गिनती: अंक  = 2;

	जबतक गिनती < संख्यायें
	{
		तीसरा = प्रथम + दूसरा;
		प्रथम = दूसरा;
		दूसरा = तीसरा;
		दिखाएँ पंक्ति तीसरा;
		गिनती = गिनती + 1;
	}
}